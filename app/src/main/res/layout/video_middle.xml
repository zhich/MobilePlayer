<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_full"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="这哪里是在斗牛，分明就是玩命嘛！"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/sp_18" />

    <RelativeLayout
        android:id="@+id/rl_holder"
        style="@style/layout_full"
        android:layout_marginTop="@dimen/dp_5">

        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
            android:id="@+id/jcv_videoplayer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tv_play_nums"
            style="@style/layout_wrap"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dp_5"
            android:background="@color/color_88000000"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:text="1000次播放"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_video_duration"
            style="@style/layout_wrap"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_5"
            android:background="@color/color_88000000"
            android:padding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:text="12:23"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_14" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_commant"
        style="@style/layout_wrap"
        android:layout_marginTop="@dimen/dp_5"
        android:src="@drawable/top_comment" />

    <TextView
        android:id="@+id/tv_commant_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_11000000"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="楼主，要不是我玩过98，我差点就信了"
        android:textSize="@dimen/sp_14" />
</LinearLayout>



