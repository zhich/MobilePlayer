<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    style="@style/layout_full">

    <LinearLayout
        android:id="@+id/mediaController_ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_player_status"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mediaController_tv_videoName"
                style="@style/layout_wrap"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1"
                android:textColor="@color/color_ffffff"
                tool:text="视频名称" />

            <ImageView
                android:id="@+id/mediaController_iv_battery"
                style="@style/layout_wrap"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@drawable/battery_10" />

            <TextView
                android:id="@+id/mediaController_tv_systemTime"
                style="@style/layout_wrap"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:textColor="@color/color_ffffff"
                tool:text="12:00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_player_top_control"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mediaController_btn_voice"
                style="@style/layout_wrap"
                android:background="@drawable/selector_voice_btn" />

            <SeekBar
                android:id="@+id/mediaController_seekbar_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxHeight="@dimen/dp_6"
                android:minHeight="@dimen/dp_6"
                android:progressDrawable="@drawable/progress_horizontal"
                android:thumb="@drawable/progress_thumb" />

            <Button
                android:id="@+id/mediaController_btn_switchPlayer"
                style="@style/layout_wrap"
                android:background="@drawable/selector_switch_player_btn" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mediaController_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_player_bottom_seekbar"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mediaController_tv_currentTime"
                style="@style/layout_wrap"
                android:layout_marginLeft="@dimen/dp_8"
                android:textColor="@color/color_ffffff"
                tool:text="0:00" />

            <SeekBar
                android:id="@+id/mediaController_seekbar_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_weight="1"
                android:maxHeight="@dimen/dp_6"
                android:minHeight="@dimen/dp_6"
                android:progressDrawable="@drawable/progress_horizontal"
                android:thumb="@drawable/progress_thumb" />

            <TextView
                android:id="@+id/mediaController_tv_duration"
                style="@style/layout_wrap"
                android:layout_marginRight="@dimen/dp_8"
                android:textColor="@color/color_ffffff"
                tool:text="20:00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_player_bottom_control"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mediaController_btn_exitVideo"
                style="@style/layout_wrap"
                android:layout_weight="1"
                android:background="@drawable/selector_exit_btn" />

            <Button
                android:id="@+id/mediaController_btn_preVideo"
                style="@style/layout_wrap"
                android:layout_weight="1"
                android:background="@drawable/selector_pre_video_btn" />


            <Button
                android:id="@+id/mediaController_btn_startOrPauseVideo"
                style="@style/layout_wrap"
                android:layout_weight="1"
                android:background="@drawable/selector_pause_video_btn" />

            <Button
                android:id="@+id/mediaController_btn_nextVideo"
                style="@style/layout_wrap"
                android:layout_weight="1"
                android:background="@drawable/selector_next_video_btn" />

            <Button
                android:id="@+id/mediaController_btn_switchScreenVideo"
                style="@style/layout_wrap"
                android:layout_weight="1"
                android:background="@drawable/selector_switch_screen_full_btn" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>