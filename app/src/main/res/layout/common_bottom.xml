<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_3"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_video_kind"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_4"
            android:src="@drawable/label_icon" />

        <TextView
            android:id="@+id/tv_video_kind_text"
            style="@style/layout_full"
            android:gravity="center_vertical"
            android:text="分类，例如：搞笑"
            android:textColor="@color/color_77000000"
            android:textSize="@dimen/dp_12" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_44000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_ding"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ding"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_4"
                android:background="@drawable/selector_shenhe_ding_pic" />

            <TextView
                android:id="@+id/tv_shenhe_ding_number"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="1"
                android:textColor="#000000" />

        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="20dp"
            android:background="#44000000" />

        <LinearLayout
            android:id="@+id/ll_cai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iv_cai"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/selector_shenhe_cai_pic" />

            <TextView
                android:id="@+id/tv_shenhe_cai_number"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:gravity="center"
                android:paddingTop="@dimen/dp_2"
                android:text="2"
                android:textColor="@color/color_000000" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_20"
            android:background="@color/color_44000000" />

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_4"
                android:src="@drawable/posts_detail_forward_night" />

            <TextView
                android:id="@+id/tv_posts_number"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:gravity="center"
                android:paddingTop="@dimen/dp_2"
                android:text="3"
                android:textColor="@color/color_44000000" />

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_20"
            android:background="@color/color_44000000"
            android:gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/ll_download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/layout_wrap"
                android:text="下载(原评论)" />

            <TextView
                android:id="@+id/tv_download_number"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:gravity="center"
                android:paddingTop="@dimen/dp_2"
                android:text="下载"
                android:textColor="@color/color_44000000" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

